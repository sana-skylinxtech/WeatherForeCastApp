<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_countryLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/countryLat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/degreeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#176;"
                    android:layout_toEndOf="@+id/countryLat"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/southText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/degreeText"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_countryLon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/rl_countryLat">

                <TextView
                    android:id="@+id/countryLon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/degreeTextLon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/countryLon"
                    android:text="&#176;"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/eastText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/degreeTextLon"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

            </RelativeLayout>
            <TextView
                android:id="@+id/countryName"
                android:layout_below="@+id/rl_countryLon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:gravity="center"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="20dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>